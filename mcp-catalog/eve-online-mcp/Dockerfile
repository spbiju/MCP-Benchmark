FROM node:lts-alpine

# Create app directory
WORKDIR /app

# Install dependencies
COPY package.json tsconfig.json ./
RUN npm install --ignore-scripts

# Copy source and build
COPY src ./src
RUN npm run build

# Entrypoint
CMD ["node", "build/index.js"]
